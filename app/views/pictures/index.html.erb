<h1>投稿一覧</h1>
<p><%= notice %> </p>
<table>
  <tr>
    <th>画像</th>
    <th>メッセージ</th>
    <th>投稿者</th>
  </tr>
<% @pictures.each do |pic| %>
  <tr>
    <td><%= image_tag pic.image.url %></td>
    <td><%= pic.content %></td>
    <td><%= pic.user.name %></td>
    <td><%= link_to '詳細の確認', picture_path(pic.id) %></td>
    <td><%= link_to '編集する', edit_picture_path(pic.id) %> </td>
    <td><%= link_to '削除する', picture_path(pic.id), method: :delete, date: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<br>
<%= button_to '新規投稿画面に戻る', new_picture_path, method: :get %>
